<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/etCalcu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:hint="0"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Limpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#5E5B5B"
            android:text="AC" />

        <Button
            android:id="@+id/btn_Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#5E5B5B"
            android:text="DEL"
            />

        <Button
            android:id="@+id/btn_Porcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="%" />

        <Button
            android:id="@+id/btn_Divicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="/"
            android:onClick="operatorClicked" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btn_Num7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="7"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Num8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="8"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Num9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="9"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Multiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="X"
            android:onClick="operatorClicked" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btn_Num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="4"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Num5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="5"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Num6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="6"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Resta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="-"
            android:onClick="operatorClicked" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btn_Num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="1"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="2"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="3"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Suma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="+"
            android:onClick="operatorClicked" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btn_Num0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="0"
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Punto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="."
            android:onClick="presionoBoton" />

        <Button

            android:id="@+id/btn_Igual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="=" />

    </LinearLayout>


</LinearLayout>